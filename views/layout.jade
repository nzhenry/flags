doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    if !user
      button#loginButton.btn(type="button", data-toggle="modal", data-target="#loginModal") Login
      button#signupButton.btn(type="button", data-toggle="modal", data-target="#signupModal") Signup
    block content
    // Login Modal
    #loginModal.modal.fade(role='dialog')
      .modal-dialog
        // Modal content
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') ×
            h4.modal-title Login
          .modal-body
            form(action='/login', method='post')
              div
                input#emailInput.form-control(type='text', name='username', placeholder='Email address')
                p
              div
                input#passwordInput.form-control(type='password', name='password', placeholder='Password')
                p
              div(style='text-align:right')
                a(href='#', data-dismiss='modal', data-toggle="modal", data-target="#forgotPasswordModal") Reset password
                p
              div
                input.btn.btn-default.form-control(type='submit', value='Log In')
          .modal-footer
            span Don't have an account? 
            a(href='#', data-dismiss='modal', data-toggle="modal", data-target="#signupModal") Sign up
    // Signup Modal
    #signupModal.modal.fade(role='dialog')
      .modal-dialog
        // Modal content
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') ×
            h4.modal-title Signup
          .modal-body
            form(action='/login', method='post')
              div
                input#emailInput.form-control(type='text', name='username', placeholder='Email address')
                p
              div
                input#passwordInput.form-control(type='password', name='password', placeholder='Password')
                p
              div
                input.btn.btn-default.form-control(type='submit', value='Sign Up')
          .modal-footer
            span Already have an account? 
            a(href='#', data-dismiss='modal', data-toggle="modal", data-target="#loginModal") Log in
    // Forgot Password Modal
    #forgotPasswordModal.modal.fade(role='dialog')
      .modal-dialog
        // Modal content
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') ×
            h4.modal-title Reset password
          .modal-body
            form(action='/login', method='post')
              div
                input#emailInput.form-control(type='text', name='username', placeholder='Email address')
                p
              div
                input.btn.btn-default.form-control(type='submit', value='Reset Password')
          .modal-footer
            a(href='#', data-dismiss='modal', data-toggle="modal", data-target="#loginModal") Back to login
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js')
    script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
    script(src='site.js')
